<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ¤– AI Learning Studio"
                android:textColor="@color/colorTextPrimary"
                android:textStyle="bold"
                android:textSize="22sp" />

            <Button
                android:id="@+id/btnBackToDash"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="â† Back"
                android:background="@drawable/bg_red_button_outline"
                android:textColor="@color/colorPrimaryBrand"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:paddingHorizontal="14dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generate roadmaps, auto-pick top YouTube guidance, and build your next study session."
            android:textColor="@color/colorTextSecondary"
            android:textSize="13sp"
            android:layout_marginBottom="16dp" />

        <!-- Input Section Glass Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_glass_card"
            android:padding="16dp"
            android:layout_marginBottom="14dp">

            <EditText
                android:id="@+id/etSkill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Skill (e.g. React, UI Design)"
                android:inputType="text"
                android:padding="12dp"
                android:background="@drawable/bg_glass_input"
                android:textColor="@color/colorTextPrimary"
                android:textColorHint="@color/colorTextTertiary" />

            <Spinner
                android:id="@+id/spinnerLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_glass_input"
                android:padding="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/etWeeklyHours"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Hours/week"
                    android:inputType="number"
                    android:text="6"
                    android:padding="12dp"
                    android:background="@drawable/bg_glass_input"
                    android:textColor="@color/colorTextPrimary"
                    android:textColorHint="@color/colorTextTertiary"
                    android:layout_marginEnd="6dp" />

                <EditText
                    android:id="@+id/etTargetWeeks"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Target weeks"
                    android:inputType="number"
                    android:text="8"
                    android:padding="12dp"
                    android:background="@drawable/bg_glass_input"
                    android:textColor="@color/colorTextPrimary"
                    android:textColorHint="@color/colorTextTertiary"
                    android:layout_marginStart="6dp" />
            </LinearLayout>

            <EditText
                android:id="@+id/etFocusAreas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Focus areas (comma separated)"
                android:inputType="text"
                android:padding="12dp"
                android:background="@drawable/bg_glass_input"
                android:textColor="@color/colorTextPrimary"
                android:textColorHint="@color/colorTextTertiary" />
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnGenerateRoadmap"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="ðŸ—ºï¸ Roadmap"
                android:background="@drawable/bg_red_button"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btnGenerateSession"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="ðŸ“ Study Session"
                android:background="@drawable/bg_red_button_outline"
                android:textColor="@color/colorPrimaryBrand"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnOpenVideo"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="â–¶ï¸ Open Top Video Guidance"
            android:background="@drawable/bg_glass_card"
            android:textColor="@color/colorSuccess"
            android:textAllCaps="false"
            android:textSize="13sp" />

        <ProgressBar
            android:id="@+id/progressAi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            android:indeterminateTint="@color/colorPrimaryBrand" />

        <!-- Results Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="ðŸ“‹ Roadmap Summary"
            android:textColor="@color/colorTextPrimary"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvRoadmapSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_glass_card"
            android:padding="14dp"
            android:textColor="@color/colorTextSecondary"
            android:textSize="13sp"
            android:lineSpacingExtra="3dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="ðŸ“Œ Roadmap Steps"
            android:textColor="@color/colorTextPrimary"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvRoadmapSteps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_glass_card"
            android:padding="14dp"
            android:textColor="@color/colorTextSecondary"
            android:textSize="13sp"
            android:lineSpacingExtra="3dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="ðŸŽ¬ Video Guidance"
            android:textColor="@color/colorTextPrimary"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvVideoGuidance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_glass_card"
            android:padding="14dp"
            android:textColor="@color/colorTextSecondary"
            android:textSize="13sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="ðŸ“ Study Session"
            android:textColor="@color/colorTextPrimary"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvStudySession"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_glass_card"
            android:padding="14dp"
            android:textColor="@color/colorTextSecondary"
            android:textSize="13sp"
            android:lineSpacingExtra="3dp" />
    </LinearLayout>
</ScrollView>
